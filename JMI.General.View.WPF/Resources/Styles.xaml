            Value="{StaticResource  TabItemTemplate}" />
    </Style>-->
    <Style
        TargetType="TabControl">
        <Setter
            Property="ItemTemplate"
            Value="{StaticResource  ClosableTabItem}" />
        <Setter 
            Property="ContentTemplate"
            Value="{StaticResource ClosableTabItemContentTemplate}"/>
    </Style>
</ResourceDictionary>